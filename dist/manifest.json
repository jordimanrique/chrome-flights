{
  "manifest_version": 2,

  "name": "Atrapalo Flights",
  "description": "Atrapalo Flights",
  "version": "0.2.0",
  "icons": {
    "128" : "icons/aeroplane_128.png"
  },
  "page_action": {
    "default_icon": "icons/aeroplane_128.png",
    "default_popup": "html/popup.html"
  },
  "background": {
    "persistent": true,
    "scripts": ["js/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*/vuelos/resultados_ajax/*"],
      "js": ["js/lib/jquery.js","js/contentScript.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "declarativeContent",
    "webRequest",
    "*://*/apitransport/*",
    "storage"
  ],
  "commands": {
    "toggle-info": {
      "suggested_key": {
        "default": "Alt+Shift+I",
        "linux": "Alt+Shift+1"
      },
      "description": "Show or hide transports and packages"
    },
    "toggle-transports": {
      "suggested_key": {
        "default": "Alt+Shift+T",
        "linux": "Alt+Shift+2"
      },
      "description": "Show or hide transports"
    },
    "toggle-packages": {
      "suggested_key": {
        "default": "Alt+Shift+P",
        "linux": "Alt+Shift+3"
      },
      "description": "Show or hide packages"
    },
    "_execute_page_action": {
      "suggested_key": { "default": "Alt+Shift+F" },
      "description": "Show TransportSearchRequest info"
    }
  }
}
